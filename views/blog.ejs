   <section class="single-post">
    <div class="post-header">
        <h2><%= blogPost.title %></h2>
        <p class="date">Posted on <%= blogPost.createdAt.toLocaleDateString() %></p>
        <% if (blogPost.tags && blogPost.tags.length > 0) { %>
          <div class="mt-3 flex flex-wrap gap-2">
            <% blogPost.tags.split(',').forEach(tag => { %>
              <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-sm"><%= tag.trim() %></span>
            <% }) %>
          </div>
        <% } %>
    </div>
    
    <% if (blogPost.imagePath) { %>
        <div class="post-image">
            <img src="<%= blogPost.imagePath %>" alt="<%= blogPost.title %>">
        </div>
    <% } %>
    
    <div class="post-content font-<%= blogPost.fontStyle %>">
        <%= blogPost.content %>
    </div>
    
    <div class="post-actions">
        <a href="/" class="btn">Back to Home</a>
    </div>
</section>

<%- include("partials/footer") %>